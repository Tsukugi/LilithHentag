/*
 * Typescript config for Development
 */

{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["ESNext", "dom"],
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "types": ["node"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/tests", "node_modules"]
}
